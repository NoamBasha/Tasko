generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  boards   Board[]
}

model Board {
  id      Int      @id @default(autoincrement())
  name    String
  userId  Int
  user    User     @relation(fields: [userId], references: [id])
  columns Column[]
}

model Column {
  id      Int    @id @default(autoincrement())
  title   String
  index   Int
  boardId Int
  board   Board  @relation(fields: [boardId], references: [id])
  tasks   Task[]
}

model Task {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  // priority    Priority?
  // isCompleted Boolean
  columnId    Int
  column      Column  @relation(fields: [columnId], references: [id])
}

